<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!--google font CSS-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,wght@0,200;1,200&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="css/superAdminStyle.css">
</head>

<body>

    <!--Admin Panel-->
    <br>
    <section class="admin-sec1 py-5 ">
        <div class="container ">
            <div class="row g-0 ">
                <div class="col-xs-7 text-center py-5">
                    <div class="row1 g-0">
                        <h4>Super-Admin Panel</h4>
                    </div><br>
                    <label for="Username" id="name"></label><br>
                    <label for="email" id="email"></label><br>
                    <label for="contact" id="contactNo"></label>

                </div>
            </div>
        </div>

    </section>

    <!--Add Faculty/Admin button-->
    <section id="admin-control-button" class="admin-control-button">

    </section>

    <!-- Add Admin/Faculty Members-->
    <section class="admin-sec2 py-5 bg-light">
        <div class="container" id="addAdmin">
            <div class="row g-0 ">
                <div class="col-xs-7 text-center py-5">
                    <h4>Add Admin/Faculty Members</h4>
                    <hr>

                    <form action="#" id="add-admin-form" autocomplete="on">
                        <div class="form-row py-3 pt-2">
                            <div class="offset-1">
                                <input type="text" class="inp px-3" maxlength="50" placeholder="Username" id="name"
                                    autofocus />
                            </div>
                        </div>
                        <div class="form-row py-3 pt-2">
                            <div class="offset-1 ">
                                <input type="email" class="inp px-3" placeholder="E-mail" id="email" autofocus />
                            </div>
                        </div>
                        <div class="form-row py-3 pt-2">
                            <div class="offset-1 ">
                                <input type="tel" class="inp px-3" placeholder="Contact No" id="contactNo" autofocus />
                            </div>
                        </div>
                        <div class="form-row py-3 pt-2">
                            <div class="offset-1 ">
                                <input type="text" class="inp px-3" placeholder="Gender" id="gender" autofocus />
                            </div>
                        </div>
                        <div class="form-row py-3 pt-2">
                            <div class="offset-1 ">
                                <input type="text" class="inp px-3" placeholder="Subject" id="subject" autofocus />
                            </div>
                        </div>
                        <div class="form-row py-3 pt-2">
                            <div class="offset-1 ">
                                <input type="text" class="inp px-3" placeholder="Role" id="role" autofocus />
                            </div>
                        </div>
                        <div class="form-row py-3 pt-2">
                            <div class="offset-1">
                                <input type="password" class="inp px-3" min="6" max="12" id="password"
                                    placeholder="Password" autofocus />
                            </div>
                        </div>
                        <div class="form-row py-3 pt-3">
                            <div class="offset-1">
                                <input type="password" class="inp px-3" placeholder="Confirm Password" id="confirm_password"autofocus />
                            </div>
                        </div>
                        <div class="form-row py-3 pt-2">
                            <div class="offset-1 col-xs-10">
                                <button type="submit" class="btn1">Add Admin</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </section>

    <div id="show-admins-data" class="show-admins-data">
        <table id="display-table">
            <tr id="basic-info">
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Subject</th>
                <th>Gender</th>
                <th>Action</th>
            </tr>
            <tbody id="mytable">

            </tbody>
        </table><br><br><br><br><br><br>

        <!--Edit Admin Details-->
        <section class="admin-sec3 py-5 bg-light" id="edit-admin">
            <div class="container">
                <div class="row g-0 " id="rowEdit">
                    <div class="col-xs-10 text-center py-5">
                        <h4>Edit Admin Details</h4>
                        <hr>


                        <form action="#" autocomplete="on" >
                            <div class="form-row py-3 pt-2">
                                <div class="offset-1">
                                    <input type="text" class="inp px-3" id="display-name" maxlength="50"
                                        placeholder="Username" autofocus />
                                </div>
                            </div>
                            <div class="form-row py-3 pt-2">
                                <div class="offset-1 ">
                                    <input type="email" class="inp px-3" id="display-email" placeholder="E-mail"
                                        autofocus />
                                </div>
                            </div>
                            <div class="form-row py-3 pt-2">
                                <div class="offset-1 ">
                                    <input type="number" class="inp px-3" id="display-contactNo"
                                        placeholder="Contact No" autofocus />
                                </div>
                            </div>
                            <div class="form-row py-3 pt-2">
                                <div class="offset-1 ">
                                    <input type="text" class="inp px-3" id="display-subject"
                                        placeholder="Contact No" autofocus />
                                </div>
                            </div>
                            <div class="form-row py-3 pt-2">
                                <div class="offset-1 ">
                                    <input type="text" class="inp px-3" id="display-gender"
                                        placeholder="Contact No" autofocus />
                                </div>
                            </div>
                            <div class="form-row py-3 pt-2">
                                <div class="offset-1 col-xs-10">
                                    <button class="btn1">Apply Changes</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </section>

    </div>

    <br><br><br><br><br><br><br><br><br><br><br><br>
    <div class="logout-btn py-3 pt-2">
        <div class="offset-4 col-xs-10"><br><br><br><br><br><br><br><br><br><br><br><br>
            <button type="submit" onclick="getLogout()" id="logout" class="btn1">Logout</button>
        </div>
    </div>

    <script src="script/superAdminPanel.js"></script>
</body>

</html>