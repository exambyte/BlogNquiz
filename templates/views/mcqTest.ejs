<body>
  <section class="start-quiz" id="start-quiz">
    <div class="row1">
      <div class="row2">
        <h2 id="qtn">Question :</h2>
      </div>
      <div id="question-area">
        <ul>
          <li>
            <input type="radio" name="answer" id="ans1" class="answer">
            <label for="ans1" style="color: white;" id="option1">option 1</label>
          </li>
          <li>
            <input type="radio" name="answer" id="ans2" class="answer">
            <label for="ans2" style="color: white;" id="option2"> option 2</label>
          </li>
          <li>
            <input type="radio" name="answer" id="ans3" class="answer">
            <label for="ans2" style="color: white;" id="option3"> option 3</label>
          </li>
          <li>
            <input type="radio" name="answer" id="ans4" class="answer">
            <label for="ans2" style="color: white;" id="option4"> option 4</label>
          </li>
        </ul>
        <div class="navigation-btn">
          <div class="position-left">
            <button id="go-back" class="btn2">Previous</button>
          </div>
          <div class="position-right">
            <button id="submit" class="btn2"><a href="#showScore"
                style="text-decoration: none; color: black;">Next</a></button>
          </div>
        </div>
      </div>

      <div class="row1">
        <div id="showScore" class="show-score" style="color: white;">

        </div>
      </div>
    </div>
  </section>


  <script src="/script/mcqTest.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
